        <info>
            <title>LOCALTIME</title>
            <keywordset>
                <keyword>LOCALTIME</keyword>
            </keywordset>
        </info>

        <indexterm><primary>LOCALTIME</primary></indexterm>

        <formalpara>
            <title>Доступно в:</title>

            <para>DSQL, PSQL, ESQL.</para>
        </formalpara>
        <formalpara>
            <title>Синтаксис:</title>
            <para>
